<div class="container">
  <div class="row">
    <h2 class="text-center message_us">Contact Us</h2>
    <br/>
    <h4 class="text-center message_us">Please fill out the quick form and we will be in touch
    with lightening speed!</h4>
    <div class="text-center">
      <span class="glyphicon glyphicon-envelope fa-2x"></span>
    </div>
    <br/>
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class:'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :comments, class:'form-control' %>
          </div>
          
          <%= f.submit 'Send', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>