<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h2 class="premium_info">Try Premium!</h2>
          <p class="premium_info"> Sign up for the premium account for $4.99/month and get full access to the community. Find the perfect business partner to build your product!</p>
        <% else %>
          <h2 class="basic_info">Get Free Access!</h2>
          <p class="basic_info"> Sign up for free and get discovered by Developers, Entrepreneurs, and Investors. Limited access to the community.</p>
        <% end %>
      </div>
      
      <div class="well">
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>